@model YuGiOhDeckEditor.Entities.BanList

<h2>Add to Ban List</h2>

<form asp-action="AddToBanList" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CardId"></label>
        <input asp-for="CardId" class="form-control" />
        <span asp-validation-for="CardId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LimitType"></label>
        <select asp-for="LimitType" asp-items="ViewBag.LimitTypes" class="form-control"></select>
        <span asp-validation-for="LimitType" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
