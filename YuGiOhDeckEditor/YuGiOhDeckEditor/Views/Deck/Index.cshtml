@model IEnumerable<YuGiOhDeckEditor.Entities.DeckInfo>

<div class="container">
    <h1>Decks</h1>
    @if (Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var deck in Model)
                {
                    <tr>
                        <td>@deck.Name</td>
                        <td>@deck.Description</td>
                        <td>
                            <a href="@Url.Action("Details", new { id = deck.Id })" class="btn btn-info">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning">
            No decks available.
        </div>
    }
</div>
