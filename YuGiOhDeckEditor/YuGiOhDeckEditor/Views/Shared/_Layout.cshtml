<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Yu-Gi-Oh Deck Editor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YuGiOhDeckEditor.styles.css" asp-append-version="true" />
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar">
        <div class="logo">
            <h2>Yu-Gi-Oh</h2>
        </div>
        <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/Deck/Index">Decks</a></li>
            <li><a href="/Card/Index">Cards</a></li>
            <li><a href="/BanList/Index">Ban List</a></li>
            <li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
            <li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
        </ul>
    </nav>

    <!-- Main content -->
    <div class="container">
        @RenderBody() <!-- The view content will be injected here -->
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; 2024 Yu-Gi-Oh Deck Editor | All rights reserved</p>
    </footer>

    <!-- Optional JavaScript -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> <!-- Optional JS library -->
    <script src="~/js/scripts.js"></script> <!-- Link to your custom JS file -->
    @RenderSection("Scripts", false) <!-- Optional section for page-specific scripts -->
</body>
</html>
