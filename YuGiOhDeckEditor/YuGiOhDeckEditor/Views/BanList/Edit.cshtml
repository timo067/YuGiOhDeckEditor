@model YuGiOhDeckEditor.Entities.BanList

@{
    ViewData["Title"] = "Edit Ban List Entry";
}

<h2>Edit Ban List Entry</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CardId" class="control-label"></label>
        <input asp-for="CardId" class="form-control" />
        <span asp-validation-for="CardId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LimitType" class="control-label"></label>
        <select asp-for="LimitType" class="form-control" asp-items="ViewBag.LimitTypes"></select>
        <span asp-validation-for="LimitType" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
